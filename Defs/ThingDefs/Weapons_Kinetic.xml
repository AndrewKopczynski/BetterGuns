<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>
	<ThingDef Name="BaseGun" Abstract="True">
		<category>Item</category>
		<eType>Equipment</eType>
		<thingClass>Equipment</thingClass>
		<label>Gun</label>
		<equipmentType>Primary</equipmentType>
		<isGun>True</isGun>
		<pathCost>10</pathCost>
		<useStandardHealth>True</useStandardHealth>
		<selectable>True</selectable>
		<maxHealth>100</maxHealth>
		<altitudeLayer>Item</altitudeLayer>
		<alwaysHaulable>True</alwaysHaulable>
		<tickerType>Never</tickerType>
		<techLevel>Midworld</techLevel>
		<storeCategories>
			<li>Weapons</li>
		</storeCategories>
		<weaponTags>
			<li>Gun</li>
		</weaponTags>
		<comps>
			<li>
				<compClass>CompForbiddable</compClass>
			</li>
		</comps>
		<verb>
			<category>Nonnative</category>
			<verbClass>Verb_Shoot</verbClass>
			<cooldownTicks>40</cooldownTicks>
			<label>VerbGun</label>
			<description>Fire a bullet.</description>
			<hasStandardCommand>true</hasStandardCommand>
			<targetParams>
				<canTargetPawns>true</canTargetPawns>
				<canTargetBuildings>true</canTargetBuildings>
				<worldObjectTargetsMustBeAutoAttackable>true</worldObjectTargetsMustBeAutoAttackable>
			</targetParams>
			<canMiss>true</canMiss>
		</verb>
	</ThingDef>
	
	<ThingDef Name="BaseBullet" Abstract="True">
		<category>Projectile</category>
		<tickerType>Normal</tickerType>
		<altitudeLayer>Projectile</altitudeLayer>
		<thingClass>Bullet</thingClass>
		<label>Bullet</label>
		<useStandardHealth>False</useStandardHealth>
		<neverMultiSelect>True</neverMultiSelect>
		<baseMaterialType>Transparent</baseMaterialType>
	</ThingDef>
	
	<!-- Musket (Joke Weapon) -->
	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_Musket</defName>
		<label>Musket round shot</label>
		<texturePath>Things/Projectile/Bullet_Small</texturePath>
		<projectile>
			<flyOverhead>false</flyOverhead>
			<damageDef>Bullet</damageDef>
			<DamageAmountBase>80</DamageAmountBase>
			<Speed>80</Speed>
		</projectile>
	</ThingDef>
	
	<ThingDef ParentName="BaseGun">
		<defName>_Musket</defName>
		<label>Musket</label>
		<description>An inaccurate, smooth bore, single-shot rifle with a lengthly reload time from a time long ago. Practically useless when compared to weapons with rifling or any sort of guidance, really.
		</description>
		<texturePath>Things/Item/Equipment/Musket</texturePath>
		<soundInteract>InteractRifle</soundInteract>
		<tradersCarry>false</tradersCarry>
		<basePrice>5</basePrice>
		<verb>
			<projectileDef>Bullet_Musket</projectileDef>
			<accuracyTouch>0.50</accuracyTouch>
			<accuracyShort>0.20</accuracyShort>
			<accuracyMedium>0.10</accuracyMedium>
			<accuracyLong>0.05</accuracyLong>
			<warmupTicks>150</warmupTicks>
			<cooldownTicks>300</cooldownTicks> <!-- 5 second reload time -->
			<range>30</range>
			<fireSound>ShotMusket</fireSound>
		</verb>
	</ThingDef>
	
	<!-- .357 Magnum Revolver -->
	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_357Revolver</defName>
		<label>Pistol bullet</label>
		<texturePath>Things/Projectile/Bullet_Small</texturePath>
		<projectile>
			<flyOverhead>false</flyOverhead>
			<damageDef>Bullet</damageDef>
			<DamageAmountBase>35</DamageAmountBase>
			<Speed>80</Speed>
		</projectile>
	</ThingDef>
	
	<ThingDef ParentName="BaseGun">
		<defName>_357Revolver</defName>
		<label>.357 Revolver</label>
		<description>A .357 Mangum revolver fitted with an orange fiber-optic front sight and filled with six shots of serious pain.
		</description>
		<texturePath>Things/Item/Equipment/357Revolver</texturePath>
		<soundInteract>InteractPistol</soundInteract>
		<tradersCarry>True</tradersCarry>
		<basePrice>296</basePrice>
		<verb>
			<projectileDef>Bullet_357Revolver</projectileDef>
			<accuracyTouch>1</accuracyTouch>
			<accuracyShort>0.94</accuracyShort>
			<accuracyMedium>0.86</accuracyMedium>
			<accuracyLong>0.78</accuracyLong>
			<warmupTicks>60</warmupTicks>
			<cooldownTicks>90</cooldownTicks> <!-- 1.5 sec CD, for recoil/balance -->
			<range>30</range>
			<fireSound>ShotPistol</fireSound>
		</verb>
	</ThingDef>
	
	<!-- USP Match -->
	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_USPMatch</defName>
		<label>.45 Pistol bullet</label>
		<texturePath>Things/Projectile/Bullet_Small</texturePath>
		<projectile>
			<flyOverhead>false</flyOverhead>
			<damageDef>Bullet</damageDef>
			<DamageAmountBase>20</DamageAmountBase>
			<Speed>55</Speed>
		</projectile>
	</ThingDef>
	
	<ThingDef ParentName="BaseGun">
		<defName>_USPMatch</defName>
		<label>USP Match</label>
		<description>A simple, accurate, and easy-to-wield handgun; it's a little large for a handgun, though.
This gun looks like a target-shooting variant, and the slide has been replaced with a silvered one.
		</description>
		<texturePath>Things/Item/Equipment/USPMatch</texturePath>
		<soundInteract>InteractPistol</soundInteract>
		<tradersCarry>True</tradersCarry>
		<basePrice>296</basePrice>
		<verb>
			<projectileDef>Bullet_USPMatch</projectileDef>
			<accuracyTouch>93</accuracyTouch>
			<accuracyShort>0.75</accuracyShort>
			<accuracyMedium>0.55</accuracyMedium>
			<accuracyLong>0.35</accuracyLong>
			<warmupTicks>60</warmupTicks>
			<cooldownTicks>90</cooldownTicks> <!-- 1.5 sec CD, for recoil/balance -->
			<range>24</range>
			<fireSound>ShotPistol</fireSound>
		</verb>
	</ThingDef>
	
	<!-- MP7 -->
	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_MP7_</defName>
		<label>MP7 bullet</label>
		<texturePath>Things/Projectile/Bullet_Small</texturePath>
		<projectile>
			<flyOverhead>false</flyOverhead>
			<damageDef>Bullet</damageDef>
			<DamageAmountBase>20</DamageAmountBase>
			<Speed>60</Speed>
		</projectile>
	</ThingDef>
	
	<ThingDef ParentName="BaseGun">
		<defName>MP7_</defName>
		<label>MP7 SMG</label>
		<description>A compact, close-quarters SMG with a foldable foregrip and adjustable buttstock.
		</description>
		<texturePath>Things/Item/Equipment/MP7</texturePath>
		<soundInteract>InteractSMG</soundInteract>
		<tradersCarry>True</tradersCarry>
		<basePrice>296</basePrice>
		<verb>
			<projectileDef>Bullet_MP7_</projectileDef>
			<accuracyTouch>0.90</accuracyTouch>
			<accuracyShort>0.75</accuracyShort>
			<accuracyMedium>0.40</accuracyMedium>
			<accuracyLong>0.20</accuracyLong>
			<warmupTicks>120</warmupTicks>
			<burstShotCount>6</burstShotCount>
			<ticksBetweenBurstShots>5</ticksBetweenBurstShots>
			<range>24</range>
			<fireSound>ShotUzi</fireSound>
		</verb>
	</ThingDef>
		
	<!-- Gauss Gun -->
	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_GaussGun</defName>
		<label>Metal slug</label>
		<texturePath>Things/Projectile/ChargeLanceShot</texturePath>
		<baseMaterialType>MotePostLight</baseMaterialType>
		<overdraw>true</overdraw>
		<projectile>
			<flyOverhead>false</flyOverhead>
			<damageDef>Bullet</damageDef>
			<DamageAmountBase>55</DamageAmountBase>
			<Speed>140</Speed>
		</projectile>
	</ThingDef>
		
	<ThingDef ParentName="BaseGun">
		<defName>_GaussGun</defName>
		<label>Railgun Rifle</label>
		<description>Some sort of prototype weapon - it's difficult to tell where exactly from. It fires solid metal slugs at excessive speeds using extremely powerful coiled electromagnets. While powerful, it comes with a significant recharge time between shots.
The unwieldy nature of the prototype also makes it hard to aim in close-quarters. Best used at a medium range.
		</description>
		<texturePath>Things/Item/Equipment/GaussGun</texturePath>
		<soundInteract>InteractRifle</soundInteract>
		<tradersCarry>false</tradersCarry>
		<basePrice>700</basePrice>
		<techLevel>Spacer</techLevel>
		<verb>
			<projectileDef>Bullet_GaussGun</projectileDef>
			<accuracyTouch>1</accuracyTouch>
			<accuracyShort>0.65</accuracyShort>
			<accuracyMedium>0.80</accuracyMedium>
			<accuracyLong>0.65</accuracyLong>
			<warmupTicks>60</warmupTicks>
			<cooldownTicks>90</cooldownTicks> <!-- 1.5 sec CD, for recoil/balance -->
			<range>28</range>
			<fireSound>ChargeLance_Fire</fireSound>
		</verb>
	</ThingDef>
</ThingDefs>
	
	
	